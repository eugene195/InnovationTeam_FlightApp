<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flightapp.innovationflightapp" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FavouritesActivity"
            android:label="@string/title_activity_favourites" >
        </activity>
        <activity
            android:name=".SearchFlightActivity"
            android:label="@string/title_activity_search_flight" >
        </activity>
        <activity
            android:name=".UpcomingFlightsActivity"
            android:label="@string/title_activity_upcoming_flights" >
        </activity>
        <activity
            android:name=".FlightDetailsActivity"
            android:label="@string/title_activity_flight_details" >
        </activity>
    </application>

</manifest>

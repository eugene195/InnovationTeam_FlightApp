<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Main123Activity"
    android:orientation="vertical"
    android:weightSum="1"
    android:baselineAligned="true"
    android:background="#ffd9e7ff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/nav_menu"
        android:id="@+id/MainMenuLabel"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:autoText="true"
        android:singleLine="false"
        android:phoneNumber="false"
        android:textColor="#ff000000"
        android:textSize="40dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_search_flight"
        android:id="@+id/page1"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:textAllCaps="false"
        android:layout_weight="0.05"
        android:textSize="20dp"
        android:capitalize="none" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_favourites"
        android:id="@+id/page2"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:layout_weight="0.05"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_upcoming"
        android:id="@+id/page3"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:layout_weight="0.05"
        android:textAllCaps="false"
        android:textSize="20dp" />

</LinearLayout>